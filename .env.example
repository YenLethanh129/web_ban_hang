# ===============================
# Database Configuration
# ===============================
DB_NAME=webbanhang
SA_PASSWORD=your_sa_password_here
APP_USER=your_app_user_here
APP_USER_LOGIN_PASSWORD=your_app_user_password_here
DB_PORT=1433

# ===============================
# Backend Configuration
# ===============================
SPRING_DATASOURCE_URL=jdbc:sqlserver://webbanhang-db:${DB_PORT};databaseName=${DB_NAME};encrypt=true;trustServerCertificate=true
SPRING_DATASOURCE_USERNAME=${APP_USER}
SPRING_DATASOURCE_PASSWORD=${APP_USER_LOGIN_PASSWORD}
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.microsoft.sqlserver.jdbc.SQLServerDriver
SPRING_JPA_HIBERNATE_PROPERTIES_DIALECT=org.hibernate.dialect.SQLServerDialect
SPRING_PROFILES_ACTIVE=dev   

# ===============================
# JWT Configuration
# ===============================
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=86400000   # token expiration in ms

# ===============================
# App Configuration
# ===============================
SERVER_PORT=8080
