{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
    "Redis": "redis:6379"
  },
  
  "SpeedSMS": {
    "AccessToken": "your-speedsms-access-token-here",
    "Type": 2,
    "BrandName": "OTP-Service"
  },
  
  "OTP": {
    "DefaultLength": 6,
    "DefaultExpirationMinutes": 5,
    "MaxExpirationMinutes": 30
  },
  
  "SMS": {
    "DefaultMessage": "Your verification code is: {otp}. Valid for {expiration} minutes."
  },
  
  "RateLimit": {
    "MaxRequestsPerHour": 5,
    "MaxRequestsPerDay": 20
  },
  
  "CORS": {
    "AllowedOrigins": "*"
  }
}