{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "shared": true,
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 10485760
        }
      }
    ]
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "WebbanhangDB": "Server=127.0.0.1,1433;Database=webbanhang;User Id=root;Password=db_password@123;encrypt=true;trustServerCertificate=true"
  }
}
